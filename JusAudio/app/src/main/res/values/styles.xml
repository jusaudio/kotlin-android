<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorDarkGray</item>
        <item name="colorError">@color/colorErrors</item>
    </style>

    <style name="CustomExoMediaButton">
        <item name="android:background">@color/colorBlack</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">@dimen/clickable_std</item>
        <item name="android:layout_height">@dimen/clickable_std</item>
    </style>

    <style name="CustomExoMediaButton.Play">
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:src">@drawable/ic_play_arrow_black_24dp</item>
    </style>

    <style name="CustomExoMediaButton.Pause">
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:src">@drawable/ic_pause_black_24dp</item>
    </style>

    <style name="CustomExoMediaButton.SkipNext">
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:src">@drawable/ic_skip_next_black_24dp</item>
    </style>

    <style name="CustomExoMediaButton.SkipPrev">
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:src">@drawable/ic_skip_previous_black_24dp</item>
    </style>


</resources>
